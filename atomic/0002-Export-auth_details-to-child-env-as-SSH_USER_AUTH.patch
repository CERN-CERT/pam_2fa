Subject: [PATCH 02/17] Export auth_details to child env as SSH_USER_AUTH

---
 session.c | 4 ++++
 1 file changed, 4 insertions(+)

diff --git a/session.c b/session.c
index 2988e29..1c4c86e 100644
--- a/session.c
+++ b/session.c
@@ -1387,6 +1387,10 @@ do_setup_env(Session *s, const char *shell)
 	}
 #endif /* USE_PAM */
 
+	if (s->authctxt->auth_details)
+		child_set_env(&env, &envsize, "SSH_USER_AUTH",
+		     s->authctxt->auth_details);
+
 	if (auth_sock_name != NULL)
 		child_set_env(&env, &envsize, SSH_AUTHSOCKET_ENV_NAME,
 		    auth_sock_name);
